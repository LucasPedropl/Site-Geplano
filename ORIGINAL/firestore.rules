rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Função para verificar se o usuário está na whitelist (coleção nova)
    function isInWhitelistCollection() {
      return exists(/databases/$(database)/documents/whitelist/$(request.auth.token.email));
    }

    // Função para verificar se o usuário está na whitelist (config antiga)
    function whitelistSettings() {
      return get(/databases/$(database)/documents/geplano_config/settings);
    }

    function isInLegacyWhitelist() {
      return whitelistSettings().data.allowed_emails != null &&
             whitelistSettings().data.allowed_emails.hasAny([request.auth.token.email]);
    }

    function isWhitelisted() {
      return request.auth != null && (isInWhitelistCollection() || isInLegacyWhitelist());
    }

    // Permite que o usuário verifique se ele mesmo está na whitelist
    match /whitelist/{email} {
      allow read: if request.auth != null && request.auth.token.email == email;
      allow write: if isWhitelisted(); // Permite admins adicionarem outros
    }

    // Coleção usada para armazenar a whitelist e outras configs sensíveis
    match /geplano_config/{document=**} {
      allow read: if request.auth != null;
      allow write: if isWhitelisted();
    }

    // Conteúdo do site pode ser lido publicamente, mas apenas admins alteram
    match /geplano_data/{document=**} {
      allow read: if true;
      allow write: if isWhitelisted();
    }

    // Bloqueia qualquer outra coleção por padrão
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
